# Database
DATABASE_URL=postgresql://user:password@localhost:5432/betting_model
DATABASE_POOL_SIZE=5

# football-data.org API
FOOTBALL_DATA_API_KEY=your_api_key_here
FOOTBALL_DATA_BASE_URL=https://api.football-data.org/v4

# API rate limits
API_REQUESTS_PER_MINUTE=10
API_RETRY_MAX_ATTEMPTS=3
API_RETRY_MIN_WAIT=1
API_RETRY_MAX_WAIT=60

# Cache
CACHE_DIR=.cache
CACHE_TTL_HOURS=24

# Model settings
MIN_MATCHES_REQUIRED=5
RANDOM_SEED=42

# Decision layer
DECISION_MODE=probability_only
EDGE_THRESHOLD=0.05
CONFIDENCE_THRESHOLD=0.95
KELLY_FRACTION=0.25

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
